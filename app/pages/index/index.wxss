.section-entry {
  margin-bottom: 32rpx;
  padding: 32rpx;
  color: #ffffff;
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
  border-radius: 8rpx;
  box-shadow: 0 32rpx 64rpx rgba(0, 0, 0, .1);
}
.section-entry:active {
  box-shadow: 0 64rpx 128rpx rgba(0, 0, 0, .1);
}
.section-speak {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 1.5;
}
.section-title {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1.5;
}
