.section-entry {
  margin-bottom: 32rpx;
  padding: 32rpx;
  color: #ffffff;
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
  border-radius: 8rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, .1);
}
.section-entry:active {
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, .1);
}
.section-speak {
  overflow: hidden;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 1.5;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.section-title {
  overflow: hidden;
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1.5;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.entry-meta {
  margin-bottom: 8rpx;
  text-align: center;
  color: #b0bec5;
  font-size: 24rpx;
}
